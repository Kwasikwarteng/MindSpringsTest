@model StringText
@{
    ViewData["Title"] = "Index";
}

<div>
    <form role="form" id="SubmitString" class="card mt-5" enctype="multipart/form-data">
        <section class="card-body">
            <div class="form-group">
                <label for="textToTranslate">Enter string you want to translate</label>
                <textarea class="form-control" id="textToTranslate" name="TextToTranslate" rows="3"></textarea>
            </div>
            <button class="btn btn-primary" type="button" onclick="SubmitStringForm()">Translate</button>
        </section>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.TextToTranslate))
    {
        <div class="mt-3">
            <h2>Translated Text (Yoda Speech)</h2>
            <p>@ViewBag.TextToTranslate</p>
        </div>
    }

</div>

@section Scripts {
    <script src="~/lib/jquery-validation//dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/StringTranslator.js" asp-append-version="true"></script>
}
